{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "./"
  },
  "lib": ["es2020"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": ["src/**/*", "tradingBotPositionLambda.ts"]
}